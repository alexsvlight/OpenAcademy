<odoo>
    <record model="ir.actions.act_window" id="openacademy_courses_action">
        <field name="name">Course</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_user_course': 1}</field>
    </record>

    <record model="ir.ui.view" id="openacademy_courses_view_form">
        <field name="name">Courses Form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <group colspan="4">
                    <field name="name"/>
                    <field name="responsible_user"/>
                    <field name="description"/>
                </group>
                <group colspan="4">
                    <field name="session_id"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="openacademy_courses_list">
        <field name="name">list of courses</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsible_user"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="openacademy_courses_search">
        <field name="name">list of courses</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="responsible_user"/>
                <field name="description"/>

                <filter name="user_course" string='courses of current user' domain="[('responsible_user','=',uid)]"/>

                 <group string="Group By">
                        <filter name="by_responsible" string="Responsible"
                                context="{'group_by': 'responsible_user'}"/>
                 </group>
            </search>
        </field>
    </record>
</odoo>